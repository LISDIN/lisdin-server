{
  "name": "lisdin-server",
  "version": "1.0.0",
  "main": "./build/src/app.js",
  "repository": "https://github.com/LISDIN/lisdin-server.git",
  "author": "rgorai <43449685+rgorai@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --files ./src/app.ts",
    "build": "yarn build:ui && yarn build:server",
    "build:ui": "yarn --cwd lisdin-ui build",
    "build:server": "tsc",
    "start": "node ./build/src/app.js",
    "pre-commit": "lint-staged --quiet",
    "lint": "eslint --fix --ext .ts,.json && prettier --write \"**/*.{ts,json}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cognito-express": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongodb": "^4.11.0",
    "path": "^0.12.7",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.7",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-node-dev": "^2.0.0"
  }
}
